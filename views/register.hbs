<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro - SkatePark</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/register.css">
</head>

<body>
  {{> header}}

  <div class="container">
    <!-- Botones para abrir los modales -->
    <button class="button toggleButton" id="inscriptionBtn">Inscripción</button>
    <button class="button toggleButton" id="participantsBtn" style="margin-left: 30px;">Participantes</button>
    <button class="button toggleButton" id="openEventsModalBtn">Ver Eventos</button>
  </div>

  <!-- Modal Inscripción -->
  <div class="modal" id="inscriptionModal">
    <div class="modal-overlay"></div>
    <div class="modal-container">
      <form class="form">
        <div class="modal-header">
          <h2>Registrate!</h2>
          <div class="close-icon toggleButton" id="closeInscriptionModal">&times;</div>
        </div>

        <div class="modal-content">
          <div class="row">
            <div class="input-group">
              <input type="text" name="firstName" class="input" placeholder=" " required>
              <label class="label">Nombre</label>
            </div>
            <div class="input-group">
              <input type="text" name="lastName" class="input" placeholder=" " required>
              <label class="label">Apellido</label>
            </div>
          </div>
          <div class="row">
            <div class="input-group">
              <input type="email" name="email" class="input" placeholder=" " required>
              <label class="label">Email</label>
            </div>
            <div class="input-group">
              <input type="tel" name="phone" class="input" placeholder=" " required>
              <label class="label">Celular</label>
            </div>
          </div>
          <div class="row">
            <div class="input-group">
              <input type="text" name="age" class="input" placeholder=" " required>
              <label class="label">Años de Experiencia</label>
            </div>
            <div class="input-group">
              <input type="text" name="address" class="input" placeholder=" " required>
              <label class="label">Especialidad</label>
            </div>
          </div>
          <div class="row">
            <div class="input-group">
              <input type="text" name="city" class="input" placeholder=" " required>
              <label class="label">Ciudad</label>
            </div>
            <div class="input-group">
              <input type="text" name="state" class="input" placeholder=" " required>
              <label class="label">Pais</label>
            </div>
          </div>

          <!-- Sección para cargar fotografía -->
          <div class="row">
            <div class="input-group">
              <input type="file" name="photo" class="input" id="file-upload" accept="image/*">
            </div>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="button toggleButton" id="closeInscriptionModalBtn">Salir</button>
          <button type="submit" class="button">Inscribirme</button>
        </div>
      </form>
    </div>
  </div>

